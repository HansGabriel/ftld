{
  "name": "ftld",
  "private": false,
  "version": "0.35.0",
  "types": "lib/index.ts",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "files": [
    "dist",
    "lib"
  ],
  "keywords": [
    "ftld",
    "fp",
    "functional",
    "functional programming",
    "small",
    "tiny",
    "utility",
    "utilities",
    "library"
  ],
  "description": "a small, focused, library that provides a set of functional primitives for building robust and resilient applications in TypeScript",
  "license": "MIT",
  "author": "Cristian Ramos <hello@cvr.im>",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./lib/index.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup lib/index.ts --format cjs,esm --clean",
    "prepare": "npm run test && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage && open coverage/index.html"
  },
  "devDependencies": {
    "@vitest/coverage-c8": "^0.30.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  }
}
